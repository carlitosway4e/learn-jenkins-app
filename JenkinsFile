pipeline {
    agent any

    stages {
        stage('Build') {
            agent {
                docker {
                    image 'node:19-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    ls -al
                    node --version
                    npm --version
                    npm ci
                    npm run build
                    ls -al
                '''
            } 
        }
        stage('Test stage') {
            steps {
                sh '''
                echo 'Test Stage'
                test -f build/index.html
                npm test
                '''
            }
        }           
    }
}